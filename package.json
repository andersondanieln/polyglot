{
  "name": "polyglot-air",
  "private": true,
  "version": "1.0.0",
  "description": "AI-Powered Text Transformation, Instantly.",
  "author": {
    "name": "AnderCoder (Anderson Nascimento)",
    "email": "contato@andercoder.com"
  },
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "copy-locales": "node copy-locales.js",
    "build": "tsc && vite build && npm run copy-locales",
    "dist": "npm run build && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.1.0",
    "electron-store": "^8.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "fs-extra": "^11.2.0",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vite-plugin-electron": "^0.28.7",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.andercoder.polyglot-air",
    "productName": "Polyglot Air",
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release/build"
    },
    "win": {
      "target": "nsis",
      "icon": "public/images/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
